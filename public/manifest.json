{
    "manifest_version": 3,
    "name": "Extension Trust Monitor",
    "version": "1.0.0",
    "description": "Helps detect risky or compromised extensions by monitoring permission changes, update events, and high-risk capabilities.",
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "management"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/ui/popup.html"
    },
    "options_page": "src/ui/options.html"
}